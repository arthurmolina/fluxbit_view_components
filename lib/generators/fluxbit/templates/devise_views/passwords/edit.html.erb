<% content_for(:header) do %>
  <%= fx_heading with_content: "Change your password", size: 2, class: "text-center" %>
<% end %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, builder: Fluxbit::FormBuilder) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.fx_password_field :password, autofocus: true, autocomplete: "new-password", wrapper_html: {class: "mb-6 field"}, help_text: @minimum_password_length ? "#{@minimum_password_length} characters minimum" : ""%>
  <%= f.fx_password_field :password_confirmation, autocomplete: "new-password", wrapper_html: {class: "mb-6 field"} %>
  <%= f.fx_submit "Change my password" %>
<% end %>

<%= render "devise/shared/links" %>
