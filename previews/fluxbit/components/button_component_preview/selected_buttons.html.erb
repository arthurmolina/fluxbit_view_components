<div class="space-y-8">
  <div>
    <%= fx_heading(size: 4, class: "mb-4") do %>Default Buttons - Selected State<% end %>
    <div class="flex flex-wrap gap-2">
      <%= fx_button(color: :default, selected: true) do %>Default<% end %>
      <%= fx_button(color: :success, selected: true) do %>Success<% end %>
      <%= fx_button(color: :danger, selected: true) do %>Danger<% end %>
      <%= fx_button(color: :info, selected: true) do %>Info<% end %>
      <%= fx_button(color: :warning, selected: true) do %>Warning<% end %>
      <%= fx_button(color: :dark, selected: true) do %>Dark<% end %>
      <%= fx_button(color: :purple, selected: true) do %>Purple<% end %>
    </div>
  </div>

  <div>
    <%= fx_heading(size: 4, class: "mb-4") do %>Outline Buttons - Selected State<% end %>
    <div class="flex flex-wrap gap-2">
      <%= fx_button(color: :default_outline, selected: true) do %>Default<% end %>
      <%= fx_button(color: :success_outline, selected: true) do %>Success<% end %>
      <%= fx_button(color: :danger_outline, selected: true) do %>Danger<% end %>
      <%= fx_button(color: :info_outline, selected: true) do %>Info<% end %>
      <%= fx_button(color: :warning_outline, selected: true) do %>Warning<% end %>
      <%= fx_button(color: :purple_outline, selected: true) do %>Purple<% end %>
    </div>
  </div>

  <div>
    <%= fx_heading(size: 4, class: "mb-4") do %>Pill Buttons - Selected State<% end %>
    <div class="flex flex-wrap gap-2">
      <%= fx_button(color: :default, pill: true, selected: true) do %>Default<% end %>
      <%= fx_button(color: :success, pill: true, selected: true) do %>Success<% end %>
      <%= fx_button(color: :danger, pill: true, selected: true) do %>Danger<% end %>
      <%= fx_button(color: :info, pill: true, selected: true) do %>Info<% end %>
    </div>
  </div>

  <div>
    <%= fx_heading(size: 4, class: "mb-4") do %>Gradient Buttons - Selected State<% end %>
    <div class="flex flex-wrap gap-2">
      <%= fx_button(color: :info_gradient, selected: true) do %>Info<% end %>
      <%= fx_button(color: :success_gradient, selected: true) do %>Success<% end %>
      <%= fx_button(color: :danger_gradient, selected: true) do %>Danger<% end %>
      <%= fx_button(color: :purple_gradient, selected: true) do %>Purple<% end %>
    </div>
  </div>

  <div>
    <%= fx_heading(size: 4, class: "mb-4") do %>Comparison: Normal vs Selected<% end %>
    <div class="space-y-4">
      <div>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Normal buttons:</p>
        <div class="flex flex-wrap gap-2">
          <%= fx_button(color: :default) do %>Default<% end %>
          <%= fx_button(color: :success) do %>Success<% end %>
          <%= fx_button(color: :danger) do %>Danger<% end %>
          <%= fx_button(color: :info) do %>Info<% end %>
        </div>
      </div>
      <div>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Selected buttons (darker appearance):</p>
        <div class="flex flex-wrap gap-2">
          <%= fx_button(color: :default, selected: true) do %>Default<% end %>
          <%= fx_button(color: :success, selected: true) do %>Success<% end %>
          <%= fx_button(color: :danger, selected: true) do %>Danger<% end %>
          <%= fx_button(color: :info, selected: true) do %>Info<% end %>
        </div>
      </div>
    </div>
  </div>

  <div>
    <%= fx_heading(size: 4, class: "mb-4") do %>Use Case: Button Group with Selected State<% end %>
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
      The selected state is useful for toggle buttons or to indicate the current active option in a button group.
    </p>
    <div class="flex flex-wrap gap-2">
      <%= fx_button(color: :default, selected: true) do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        List View
      <% end %>
      <%= fx_button(color: :default) do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
        </svg>
        Grid View
      <% end %>
    </div>
  </div>
</div>
