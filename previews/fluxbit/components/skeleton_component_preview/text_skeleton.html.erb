<div class="space-y-6">
  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">3 Lines (Default)</h4>
    <%= fx_skeleton(variant: :text) %>
  </div>

  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">5 Lines</h4>
    <%= fx_skeleton(variant: :text, rows: 5) %>
  </div>

  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Single Line</h4>
    <%= fx_skeleton(variant: :text, rows: 1) %>
  </div>
</div>