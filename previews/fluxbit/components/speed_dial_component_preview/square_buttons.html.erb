<!-- Square -->
<div class="relative h-40 border rounded-lg border-gray-300 dark:border-gray-600">
  <%= fx_speed_dial square: true do |speed_dial| %>
    <% speed_dial.with_action icon: "heroicons_solid:plus", tooltip: "Add item" %>
    <% speed_dial.with_action icon: "heroicons_solid:pencil", tooltip: "Edit item" %>
    <% speed_dial.with_action icon: "heroicons_solid:trash", tooltip: "Delete item" %>
  <% end %>
</div>
