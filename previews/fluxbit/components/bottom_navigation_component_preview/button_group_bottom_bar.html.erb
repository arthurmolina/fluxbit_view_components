<%= render Fluxbit::BottomNavigationComponent.new do |nav| %>
  <% nav.with_button_group(columns: 3) do |group| %>
    <% group.with_button(active: true) { "New" } %>
    <% group.with_button { "Popular" } %>
    <% group.with_button { "Following" } %>
  <% end %>
  <% nav.with_item(href: "/", icon: "heroicons_solid:home", tooltip_text: "Home") { "Home" } %>
  <% nav.with_item(href: "/wallet", icon: "heroicons_solid:wallet", tooltip_text: "Wallet") { "Wallet" } %>
  <% nav.with_item(href: "/bookmark", icon: "heroicons_solid:bookmark", tooltip_text: "Bookmarks") { "Bookmarks" } %>
  <% nav.with_item(href: "/search", icon: "heroicons_solid:magnifying-glass", tooltip_text: "Search") { "Search" } %>
  <% nav.with_item(href: "/settings", icon: "heroicons_solid:cog-6-tooth", tooltip_text: "Settings") { "Settings" } %>
<% end %>
