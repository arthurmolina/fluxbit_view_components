<div class="flex flex-col gap-4">
  <div>
    <h3 class="text-lg font-semibold mb-2">Basic Progress Bar</h3>
    <%= render Fluxbit::ProgressComponent.new(progress: 45) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-2">Progress with Different Values</h3>
    <div class="space-y-2">
      <% [25, 50, 75, 100].each do |value| %>
        <div>
          <span class="text-sm text-gray-600">Progress: <%= value %>%</span>
          <%= render Fluxbit::ProgressComponent.new(progress: value) %>
        </div>
      <% end %>
    </div>
  </div>
</div>