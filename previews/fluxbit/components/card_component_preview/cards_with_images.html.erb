<div class="space-y-8">
  <div>
    <h3 class="text-lg font-semibold mb-4">Card with image on top</h3>
    <%= fx_card(
      image: 'https://flowbite.com/docs/images/blog/image-1.jpg',
      image_position: :top
    ) do |card| %>
      <% card.with_header do %>
        <h5 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">Noteworthy technology acquisitions 2021</h5>
      <% end %>
      <% card.with_section do %>
        <p class="font-normal text-gray-700 dark:text-gray-400">Here are the biggest enterprise technology acquisitions of 2021 so far, in reverse chronological order.</p>
      <% end %>
      <% card.with_footer do %>
        <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
          Read more
          <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
          </svg>
        </a>
      <% end %>
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">Card with image and custom image attributes</h3>
    <%= fx_card(
      image: 'https://flowbite.com/docs/images/blog/image-2.jpg',
      image_position: :top,
      image_html: { alt: 'Blog post cover image', class: 'object-cover' }
    ) do |card| %>
      <% card.with_section do %>
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Custom Image Attributes</h5>
        <p class="font-normal text-gray-700 dark:text-gray-400">This card demonstrates how to pass custom HTML attributes to the image element using the image_html parameter.</p>
      <% end %>
    <% end %>
  </div>
</div>