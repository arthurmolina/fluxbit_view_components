<div class="space-y-6">
  <div>
    <h3 class="text-lg font-semibold mb-4">Card with multiple styled sections</h3>
    <%= fx_card do |card| %>
      <% card.with_header do %>
        <h5 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">Product Feature Overview</h5>
      <% end %>
      <% card.with_section do %>
        <h6 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Core Features</h6>
        <ul class="list-disc list-inside text-gray-700 dark:text-gray-400">
          <li>Advanced analytics dashboard</li>
          <li>Real-time data synchronization</li>
          <li>Customizable reporting</li>
        </ul>
      <% end %>
      <% card.with_section do %>
        <h6 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Pricing</h6>
        <div class="flex items-center space-x-2">
          <span class="text-2xl font-bold text-gray-900 dark:text-white">$29</span>
          <span class="text-gray-500 dark:text-gray-400">per month</span>
        </div>
      <% end %>
      <% card.with_footer do %>
        <div class="flex space-x-2">
          <button class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700">Start Trial</button>
          <button class="px-4 py-2 text-sm font-medium text-gray-900 bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-700 dark:text-white dark:hover:bg-gray-600">Learn More</button>
        </div>
      <% end %>
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">Section without default styling</h3>
    <%= fx_card do |card| %>
      <% card.with_header do %>
        <h5 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">Custom Section Styling</h5>
      <% end %>
      <% card.with_section do %>
        <p class="font-normal text-gray-700 dark:text-gray-400">This is a regular section with default padding and spacing.</p>
      <% end %>
      <% card.with_section(no_class: true) do %>
        <div class="bg-gray-50 dark:bg-gray-700 p-3 rounded">
          <p class="text-sm text-gray-600 dark:text-gray-300">This section has no_class: true, so it doesn't get the default section styling. Instead, it has custom background and padding.</p>
        </div>
      <% end %>
      <% card.with_section do %>
        <p class="font-normal text-gray-700 dark:text-gray-400">And this is another regular section with default styling.</p>
      <% end %>
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">Card with form sections</h3>
    <%= fx_card do |card| %>
      <% card.with_header do %>
        <h5 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">Contact Form</h5>
      <% end %>
      <% card.with_section do %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Name</label>
          <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
        </div>
      <% end %>
      <% card.with_section do %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Email</label>
          <input type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
        </div>
      <% end %>
      <% card.with_section do %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Message</label>
          <textarea rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"></textarea>
        </div>
      <% end %>
      <% card.with_footer do %>
        <button class="w-full px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Send Message</button>
      <% end %>
    <% end %>
  </div>
</div>