<div class="space-y-8">
  <div>
    <%= fx_heading(size: 3) do %>Custom Spacing and Shadow<% end %>
    <p class="text-gray-600 text-sm mt-1 mb-4">Enhanced button group with additional spacing and shadow effects</p>
    <%= fx_button_group(class: "shadow-lg p-1 bg-white rounded-xl") do |group| %>
      <%= group.with_button(color: :default) do %>Save<% end %>
      <%= group.with_button(color: :light) do %>Draft<% end %>
      <%= group.with_button(color: :light_outline) do %>Cancel<% end %>
    <% end %>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Colored Background Theme<% end %>
    <p class="text-gray-600 text-sm mt-1 mb-4">Button group with matching background theme</p>
    <%= fx_button_group(class: "bg-blue-50 p-2 rounded-lg border border-blue-200") do |group| %>
      <%= group.with_button(color: :default) do %>Primary<% end %>
      <%= group.with_button(color: :info) do %>Secondary<% end %>
      <%= group.with_button(color: :light) do %>Tertiary<% end %>
    <% end %>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Full Width Groups<% end %>
    <p class="text-gray-600 text-sm mt-1 mb-4">Button groups that span the full width of their container</p>
    <%= fx_button_group(class: "w-full") do |group| %>
      <%= group.with_button(color: :success, class: "flex-1") do %>Accept<% end %>
      <%= group.with_button(color: :danger, class: "flex-1") do %>Decline<% end %>
    <% end %>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Responsive Button Groups<% end %>
    <p class="text-gray-600 text-sm mt-1 mb-4">Responsive groups that stack on mobile, inline on desktop</p>
    <%= fx_button_group(class: "flex-col sm:flex-row w-full sm:w-auto") do |group| %>
      <%= group.with_button(color: :default, class: "w-full sm:w-auto mb-1 sm:mb-0") do %>
        <%= anyicon("heroicons_solid:document-plus", class: "w-4 h-4 mr-2") %>
        New Document
      <% end %>
      <%= group.with_button(color: :info, class: "w-full sm:w-auto mb-1 sm:mb-0") do %>
        <%= anyicon("heroicons_solid:folder-open", class: "w-4 h-4 mr-2") %>
        Open Existing
      <% end %>
      <%= group.with_button(color: :light, class: "w-full sm:w-auto") do %>
        <%= anyicon("heroicons_solid:cloud-arrow-up", class: "w-4 h-4 mr-2") %>
        Import File
      <% end %>
    <% end %>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Animated Hover Effects<% end %>
    <p class="text-gray-600 text-sm mt-1 mb-4">Button group with smooth transitions and hover animations</p>
    <%= fx_button_group(class: "transition-all duration-300 hover:shadow-md hover:scale-105") do |group| %>
      <%= group.with_button(color: :purple, class: "transition-all duration-200 hover:scale-110") do %>Hover Me<% end %>
      <%= group.with_button(color: :purple, class: "transition-all duration-200 hover:scale-110") do %>And Me<% end %>
      <%= group.with_button(color: :purple, class: "transition-all duration-200 hover:scale-110") do %>Me Too<% end %>
    <% end %>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Dark Theme Group<% end %>
    <p class="text-gray-600 text-sm mt-1 mb-4">Dark themed button group with custom styling</p>
    <%= fx_button_group(class: "bg-gray-900 p-3 rounded-lg border border-gray-700") do |group| %>
      <%= group.with_button(color: :light, class: "text-white border-gray-600") do %>Light<% end %>
      <%= group.with_button(color: :dark, class: "bg-gray-700 text-white") do %>Dark<% end %>
      <%= group.with_button(color: :light, class: "text-white border-gray-600") do %>Auto<% end %>
    <% end %>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Compact Mobile Group<% end %>
    <p class="text-gray-600 text-sm mt-1 mb-4">Compact layout optimized for mobile interfaces</p>
    <%= fx_button_group(class: "shadow-sm") do |group| %>
      <%= group.with_button(color: :light, size: 0, class: "px-2") do %>
        <%= anyicon("heroicons_solid:heart", class: "w-3 h-3") %>
      <% end %>
      <%= group.with_button(color: :light, size: 0, class: "px-2") do %>
        <%= anyicon("heroicons_solid:share", class: "w-3 h-3") %>
      <% end %>
      <%= group.with_button(color: :light, size: 0, class: "px-2") do %>
        <%= anyicon("heroicons_solid:bookmark", class: "w-3 h-3") %>
      <% end %>
      <%= group.with_button(color: :light, size: 0, class: "px-2") do %>
        <%= anyicon("heroicons_solid:ellipsis-horizontal", class: "w-3 h-3") %>
      <% end %>
    <% end %>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Bordered Group Variations<% end %>
    <p class="text-gray-600 text-sm mt-1 mb-4">Different border styles and treatments</p>
    <div class="space-y-4">
      <div>
        <p class="text-sm text-gray-600 mb-2">Thick border with rounded corners</p>
        <%= fx_button_group(class: "border-2 border-green-300 rounded-xl") do |group| %>
          <%= group.with_button(color: :success_outline) do %>Option A<% end %>
          <%= group.with_button(color: :success_outline) do %>Option B<% end %>
          <%= group.with_button(color: :success_outline) do %>Option C<% end %>
        <% end %>
      </div>
      
      <div>
        <p class="text-sm text-gray-600 mb-2">Dashed border with background</p>
        <%= fx_button_group(class: "border-2 border-dashed border-blue-400 bg-blue-50 p-1 rounded-lg") do |group| %>
          <%= group.with_button(color: :info) do %>Draft<% end %>
          <%= group.with_button(color: :light) do %>Review<% end %>
          <%= group.with_button(color: :light) do %>Publish<% end %>
        <% end %>
      </div>
      
      <div>
        <p class="text-sm text-gray-600 mb-2">No border with background only</p>
        <%= fx_button_group(class: "bg-gradient-to-r from-purple-100 to-pink-100 p-2 rounded-lg") do |group| %>
          <%= group.with_button(color: :purple) do %>Start<% end %>
          <%= group.with_button(color: :light) do %>Middle<% end %>
          <%= group.with_button(color: :purple) do %>End<% end %>
        <% end %>
      </div>
    </div>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Custom Spacing Between Buttons<% end %>
    <p class="text-gray-600 text-sm mt-1 mb-4">Override default spacing with custom gap classes</p>
    <div class="space-y-4">
      <div>
        <p class="text-sm text-gray-600 mb-2">No gap (default)</p>
        <%= fx_button_group do |group| %>
          <%= group.with_button(color: :default) do %>Button<% end %>
          <%= group.with_button(color: :default) do %>Button<% end %>
          <%= group.with_button(color: :default) do %>Button<% end %>
        <% end %>
      </div>
      
      <div>
        <p class="text-sm text-gray-600 mb-2">Small gap</p>
        <%= fx_button_group(class: "space-x-1") do |group| %>
          <%= group.with_button(color: :info, class: "rounded-md") do %>Button<% end %>
          <%= group.with_button(color: :info, class: "rounded-md") do %>Button<% end %>
          <%= group.with_button(color: :info, class: "rounded-md") do %>Button<% end %>
        <% end %>
      </div>
      
      <div>
        <p class="text-sm text-gray-600 mb-2">Large gap</p>
        <%= fx_button_group(class: "space-x-4") do |group| %>
          <%= group.with_button(color: :success, class: "rounded-lg") do %>Button<% end %>
          <%= group.with_button(color: :success, class: "rounded-lg") do %>Button<% end %>
          <%= group.with_button(color: :success, class: "rounded-lg") do %>Button<% end %>
        <% end %>
      </div>
    </div>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Vertical Stack with Custom Classes<% end %>
    <p class="text-gray-600 text-sm mt-1 mb-4">Vertical button arrangement with custom styling</p>
    <%= fx_button_group(class: "flex-col space-y-2 w-48") do |group| %>
      <%= group.with_button(color: :default, class: "w-full rounded-lg justify-start") do %>
        <%= anyicon("heroicons_solid:home", class: "w-4 h-4 mr-3") %>
        Dashboard
      <% end %>
      <%= group.with_button(color: :light, class: "w-full rounded-lg justify-start") do %>
        <%= anyicon("heroicons_solid:chart-bar", class: "w-4 h-4 mr-3") %>
        Analytics
      <% end %>
      <%= group.with_button(color: :light, class: "w-full rounded-lg justify-start") do %>
        <%= anyicon("heroicons_solid:cog-6-tooth", class: "w-4 h-4 mr-3") %>
        Settings
      <% end %>
    <% end %>
  </div>
</div>