<div class="space-y-8">
  <div>
    <%= fx_heading(size: 3) do %>Document Editor Toolbar<% end %>
    <div class="mt-4 p-4 border rounded-lg bg-gray-50">
      <div class="flex flex-wrap gap-2">
        <!-- File operations -->
        <%= fx_button_group do |group| %>
          <%= group.with_button(color: :light, size: 1) do %>
            <%= anyicon("heroicons_solid:document-plus", class: "w-4 h-4") %>
          <% end %>
          <%= group.with_button(color: :light, size: 1) do %>
            <%= anyicon("heroicons_solid:folder-open", class: "w-4 h-4") %>
          <% end %>
          <%= group.with_button(color: :light, size: 1) do %>
            <%= anyicon("heroicons_solid:archive-box", class: "w-4 h-4") %>
          <% end %>
        <% end %>
        
        <!-- Text formatting -->
        <%= fx_button_group do |group| %>
          <%= group.with_button(color: :light, size: 1) do %>
            <%= anyicon("heroicons_solid:bold", class: "w-4 h-4") %>
          <% end %>
          <%= group.with_button(color: :light, size: 1) do %>
            <%= anyicon("heroicons_solid:italic", class: "w-4 h-4") %>
          <% end %>
          <%= group.with_button(color: :light, size: 1) do %>
            <%= anyicon("heroicons_solid:underline", class: "w-4 h-4") %>
          <% end %>
        <% end %>
        
        <!-- Alignment -->
        <%= fx_button_group do |group| %>
          <%= group.with_button(color: :light, size: 1) do %>
            <%= anyicon("heroicons_solid:bars-3-bottom-left", class: "w-4 h-4") %>
          <% end %>
          <%= group.with_button(color: :light, size: 1) do %>
            <%= anyicon("heroicons_solid:bars-3", class: "w-4 h-4") %>
          <% end %>
          <%= group.with_button(color: :light, size: 1) do %>
            <%= anyicon("heroicons_solid:bars-3-bottom-right", class: "w-4 h-4") %>
          <% end %>
        <% end %>
        
        <!-- Lists -->
        <%= fx_button_group do |group| %>
          <%= group.with_button(color: :light, size: 1) do %>
            <%= anyicon("heroicons_solid:list-bullet", class: "w-4 h-4") %>
          <% end %>
          <%= group.with_button(color: :light, size: 1) do %>
            <%= anyicon("heroicons_solid:numbered-list", class: "w-4 h-4") %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Media Player Toolbar<% end %>
    <div class="mt-4 p-6 border rounded-lg bg-gray-900 text-white">
      <div class="flex items-center justify-center space-x-4">
        <!-- Playback controls -->
        <%= fx_button_group do |group| %>
          <%= group.with_button(color: :dark, size: 2) do %>
            <%= anyicon("heroicons_solid:backward", class: "w-5 h-5") %>
          <% end %>
          <%= group.with_button(color: :success, size: 2) do %>
            <%= anyicon("heroicons_solid:play", class: "w-5 h-5") %>
          <% end %>
          <%= group.with_button(color: :dark, size: 2) do %>
            <%= anyicon("heroicons_solid:forward", class: "w-5 h-5") %>
          <% end %>
        <% end %>
        
        <!-- Volume controls -->
        <%= fx_button_group do |group| %>
          <%= group.with_button(color: :dark, size: 2) do %>
            <%= anyicon("heroicons_solid:speaker-wave", class: "w-5 h-5") %>
          <% end %>
          <%= group.with_button(color: :dark, size: 2) do %>
            <%= anyicon("heroicons_solid:speaker-x-mark", class: "w-5 h-5") %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Image Editor Toolbar<% end %>
    <div class="mt-4 p-4 border rounded-lg bg-white shadow-sm">
      <div class="flex flex-wrap gap-3">
        <!-- Selection tools -->
        <div class="flex flex-col items-center">
          <p class="text-xs text-gray-600 mb-1">Selection</p>
          <%= fx_button_group do |group| %>
            <%= group.with_button(color: :default, size: 1) do %>
              <%= anyicon("heroicons_solid:cursor-arrow-rays", class: "w-4 h-4") %>
            <% end %>
            <%= group.with_button(color: :light, size: 1) do %>
              <%= anyicon("heroicons_solid:rectangle-stack", class: "w-4 h-4") %>
            <% end %>
            <%= group.with_button(color: :light, size: 1) do %>
              <%= anyicon("heroicons_solid:ellipsis-horizontal-circle", class: "w-4 h-4") %>
            <% end %>
          <% end %>
        </div>
        
        <!-- Drawing tools -->
        <div class="flex flex-col items-center">
          <p class="text-xs text-gray-600 mb-1">Draw</p>
          <%= fx_button_group do |group| %>
            <%= group.with_button(color: :light, size: 1) do %>
              <%= anyicon("heroicons_solid:pencil", class: "w-4 h-4") %>
            <% end %>
            <%= group.with_button(color: :light, size: 1) do %>
              <%= anyicon("heroicons_solid:paint-brush", class: "w-4 h-4") %>
            <% end %>
            <%= group.with_button(color: :light, size: 1) do %>
              <%= anyicon("heroicons_solid:eye-dropper", class: "w-4 h-4") %>
            <% end %>
          <% end %>
        </div>
        
        <!-- Transform tools -->
        <div class="flex flex-col items-center">
          <p class="text-xs text-gray-600 mb-1">Transform</p>
          <%= fx_button_group do |group| %>
            <%= group.with_button(color: :light, size: 1) do %>
              <%= anyicon("heroicons_solid:arrows-pointing-out", class: "w-4 h-4") %>
            <% end %>
            <%= group.with_button(color: :light, size: 1) do %>
              <%= anyicon("heroicons_solid:arrow-path", class: "w-4 h-4") %>
            <% end %>
            <%= group.with_button(color: :light, size: 1) do %>
              <%= anyicon("heroicons_solid:scissors", class: "w-4 h-4") %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Admin Panel Toolbar<% end %>
    <div class="mt-4 p-4 border rounded-lg bg-blue-50">
      <div class="flex items-center justify-between">
        <div class="flex space-x-2">
          <%= fx_button_group do |group| %>
            <%= group.with_button(color: :success, size: 1) do %>
              <%= anyicon("heroicons_solid:plus", class: "w-4 h-4 mr-1") %>
              Add
            <% end %>
            <%= group.with_button(color: :info, size: 1) do %>
              <%= anyicon("heroicons_solid:pencil-square", class: "w-4 h-4 mr-1") %>
              Edit
            <% end %>
            <%= group.with_button(color: :danger, size: 1) do %>
              <%= anyicon("heroicons_solid:trash", class: "w-4 h-4 mr-1") %>
              Delete
            <% end %>
          <% end %>
        </div>
        
        <div class="flex space-x-2">
          <%= fx_button_group do |group| %>
            <%= group.with_button(color: :light_outline, size: 1) do %>
              <%= anyicon("heroicons_solid:funnel", class: "w-4 h-4 mr-1") %>
              Filter
            <% end %>
            <%= group.with_button(color: :light_outline, size: 1) do %>
              <%= anyicon("heroicons_solid:magnifying-glass", class: "w-4 h-4 mr-1") %>
              Search
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Code Editor Toolbar<% end %>
    <div class="mt-4 p-3 border rounded-lg bg-gray-800 text-white">
      <div class="flex items-center justify-between">
        <div class="flex space-x-3">
          <%= fx_button_group do |group| %>
            <%= group.with_button(color: :dark, size: 0) do %>
              <%= anyicon("heroicons_solid:play", class: "w-3 h-3 mr-1") %>
              Run
            <% end %>
            <%= group.with_button(color: :dark, size: 0) do %>
              <%= anyicon("heroicons_solid:stop", class: "w-3 h-3 mr-1") %>
              Stop
            <% end %>
            <%= group.with_button(color: :dark, size: 0) do %>
              <%= anyicon("heroicons_solid:arrow-path", class: "w-3 h-3 mr-1") %>
              Reset
            <% end %>
          <% end %>
        </div>
        
        <div class="flex space-x-2">
          <%= fx_button_group do |group| %>
            <%= group.with_button(color: :dark, size: 0) do %>
              <%= anyicon("heroicons_solid:bug-ant", class: "w-3 h-3") %>
            <% end %>
            <%= group.with_button(color: :dark, size: 0) do %>
              <%= anyicon("heroicons_solid:cog-6-tooth", class: "w-3 h-3") %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>