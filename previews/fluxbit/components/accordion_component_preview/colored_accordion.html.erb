    <div>
      <h4 class="text-md font-medium mb-3">Info</h4>
      <%= fx_accordion(color: :info) do |accordion| %>
        <% accordion.with_panel(open: true, index: 0) do |panel| %>
          <% panel.with_header { "Helpful Information" } %>
          <% panel.with_body { "Neque porro quisquam est, qui dolorem ipsum quia dolor sit amet." } %>
        <% end %>
