    <div>
      <h4 class="text-md font-medium mb-3">Dark</h4>
      <%= fx_accordion(color: :dark) do |accordion| %>
        <% accordion.with_panel(open: true, index: 0) do |panel| %>
          <% panel.with_header { "Extended Content" } %>
          <% panel.with_body { "Consectetur, adipisci velit, sed quia non numquam eius modi tempora." } %>
        <% end %>
      <% end %>
    </div>
  </div>

  <h3 class="text-lg font-semibold mb-4 mt-12">Color comparison grid</h3>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% [:default, :light, :primary, :secondary, :success, :danger, :warning, :info, :dark].each do |color| %>
      <div>
        <h5 class="text-sm font-medium mb-2 capitalize"><%= color %></h5>
        <%= fx_accordion(color: color) do |accordion| %>
          <% accordion.with_panel(open: true, index: 0) do |panel| %>
            <% panel.with_header { "#{color.to_s.capitalize} Header" } %>
            <% panel.with_body { "Sample content for #{color} color scheme." } %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <h3 class="text-lg font-semibold mb-4 mt-12">Semantic usage examples</h3>
