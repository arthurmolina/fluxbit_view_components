        <%= fx_accordion(color: :warning) do |accordion| %>
          <% accordion.with_panel(open: true, index: 0) do |panel| %>
            <% panel.with_header { "⚠️ Attention Required" } %>
            <% panel.with_body do %>
              <div class="space-y-2">
                <p>Nemo enim ipsam voluptatem quia voluptas:</p>
                <ul class="list-disc list-inside text-sm">
                  <li>Sit aspernatur aut odit aut fugit</li>
                  <li>Sed quia consequuntur magni</li>
