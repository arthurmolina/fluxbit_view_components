<div class="space-y-6">
  <div>
    <h3 class="text-lg font-semibold mb-4">External links with target="_blank"</h3>
    <div class="space-y-2">
      <%= fx_link(
        href: "https://github.com",
        target: "_blank",
        rel: "noopener noreferrer"
      ) do %>
        GitHub (opens in new tab)
      <% end %>
      <br>
      <%= fx_link(
        href: "https://tailwindcss.com",
        target: "_blank",
        rel: "noopener noreferrer",
        color: :info
      ) do %>
        Tailwind CSS (opens in new tab)
      <% end %>
      <br>
      <%= fx_link(
        href: "https://flowbite.com",
        target: "_blank",
        rel: "noopener noreferrer",
        color: :success
      ) do %>
        Flowbite (opens in new tab)
      <% end %>
    </div>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">External links with icons</h3>
    <div class="space-y-2">
      <%= fx_link(
        href: "https://example.com",
        target: "_blank",
        rel: "noopener noreferrer",
        class: "inline-flex items-center space-x-1"
      ) do %>
        <span>External website</span>
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      <% end %>
      <br>
      <%= fx_link(
        href: "mailto:contact@example.com",
        class: "inline-flex items-center space-x-1",
        color: :secondary
      ) do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span>Send Email</span>
      <% end %>
      <br>
      <%= fx_link(
        href: "tel:+1234567890",
        class: "inline-flex items-center space-x-1",
        color: :success
      ) do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <span>Call Phone</span>
      <% end %>
    </div>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">Social media links</h3>
    <div class="flex space-x-4">
      <%= fx_link(
        href: "https://twitter.com",
        target: "_blank",
        rel: "noopener noreferrer",
        class: "inline-flex items-center space-x-2 px-3 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"
      ) do %>
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
        </svg>
        <span>Twitter</span>
      <% end %>

      <%= fx_link(
        href: "https://linkedin.com",
        target: "_blank",
        rel: "noopener noreferrer",
        class: "inline-flex items-center space-x-2 px-3 py-2 bg-blue-700 text-white rounded hover:bg-blue-800"
      ) do %>
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
        <span>LinkedIn</span>
      <% end %>
    </div>
  </div>
</div>