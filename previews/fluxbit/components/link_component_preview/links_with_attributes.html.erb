<div class="space-y-6">
  <div>
    <h3 class="text-lg font-semibold mb-4">Link with title attribute</h3>
    <%= fx_link(
      href: "#",
      title: "This is a helpful tooltip that appears on hover"
    ) do %>
      Hover over this link to see the title
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">Link with custom ID and classes</h3>
    <%= fx_link(
      href: "#",
      id: "special-link",
      class: "font-bold text-lg border-b-2 border-dotted"
    ) do %>
      Link with custom styling
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">Link with data attributes</h3>
    <%= fx_link(
      href: "#",
      data: {
        testid: "analytics-link",
        category: "navigation",
        action: "click",
        turbo_method: "post"
      }
    ) do %>
      Link with data attributes
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">Link with ARIA attributes</h3>
    <%= fx_link(
      href: "#",
      aria: {
        label: "Navigate to user profile page",
        describedby: "profile-description"
      },
      role: "button"
    ) do %>
      Profile Link
    <% end %>
    <p id="profile-description" class="text-sm text-gray-500 mt-1">
      This link will take you to your user profile where you can edit your information
    </p>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">Link with multiple HTML attributes</h3>
    <%= fx_link(
      href: "#",
      target: "_blank",
      rel: "noopener noreferrer",
      download: true,
      class: "inline-flex items-center space-x-2",
      style: "text-decoration: none;"
    ) do %>
      <span>Download File</span>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-4-4m4 4l4-4m6-6H6v16h12V6z"></path>
      </svg>
    <% end %>
  </div>
</div>