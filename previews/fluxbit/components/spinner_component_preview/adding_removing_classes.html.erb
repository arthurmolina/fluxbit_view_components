<div class="space-y-4">
  <h3 class="text-lg font-semibold mb-2">Custom Classes</h3>
  <div class="flex gap-4 items-center">
    <%= render Fluxbit::SpinnerComponent.new(class: "mr-4") %>
    <span class="text-sm">With custom margin</span>

    <%= render Fluxbit::SpinnerComponent.new(class: "text-red-200 fill-red-500") %>
    <span class="text-sm ml-4">Custom color override</span>
  </div>

  <h3 class="text-lg font-semibold mb-2 mt-6">Removed Classes</h3>
  <div class="flex gap-4 items-center">
    <%= render Fluxbit::SpinnerComponent.new(remove_class: "animate-spin") %>
    <span class="text-sm">Animation removed</span>
  </div>
</div>