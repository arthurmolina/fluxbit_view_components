<div class="space-y-8">
  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Default Stepper</h4>
    <%= fx_stepper do |stepper| %>
      <% stepper.with_step(title: "Step 1", state: :completed, number: "1") %>
      <% stepper.with_step(title: "Step 2", state: :active, number: "2") %>
      <% stepper.with_step(title: "Step 3", state: :pending, number: "3") %>
    <% end %>
  </div>

  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">With Custom Background</h4>
    <%= fx_stepper(class: "bg-gray-50 dark:bg-gray-800 p-6 rounded-lg") do |stepper| %>
      <% stepper.with_step(title: "Step 1", state: :completed, number: "1") %>
      <% stepper.with_step(title: "Step 2", state: :active, number: "2") %>
      <% stepper.with_step(title: "Step 3", state: :pending, number: "3") %>
    <% end %>
  </div>

  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Remove Width Class (Removing 'w-full')</h4>
    <%= fx_stepper(remove_class: "w-full", class: "inline-flex") do |stepper| %>
      <% stepper.with_step(title: "Step 1", state: :completed, number: "1") %>
      <% stepper.with_step(title: "Step 2", state: :active, number: "2") %>
      <% stepper.with_step(title: "Step 3", state: :pending, number: "3") %>
    <% end %>
  </div>
</div>