<% [:blue, :green, :red, :yellow, :indigo, :purple].each do |color| %>
  <div class="mb-8">
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white"><%= color.to_s.titlecase %> Stepper</h4>
    <%= fx_stepper(color: color, class: "mb-4") do |stepper| %>
      <% stepper.with_step(title: "Step 1", state: :completed, number: "1") %>
      <% stepper.with_step(title: "Step 2", state: :active, number: "2") %>
      <% stepper.with_step(title: "Step 3", state: :pending, number: "3") %>
    <% end %>
  </div>
<% end %>