<div class="space-y-8">
  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Progress Variant (Compact Style)</h4>
    <%= fx_stepper(variant: :progress) do |stepper| %>
      <% stepper.with_step(title: "Step 1", state: :completed, number: "1") %>
      <% stepper.with_step(title: "Step 2", state: :active, number: "2") %>
      <% stepper.with_step(title: "Step 3", state: :pending, number: "3") %>
    <% end %>
  </div>

  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Progress Variant with Different Colors</h4>
    <%= fx_stepper(variant: :progress, color: :green) do |stepper| %>
      <% stepper.with_step(title: "Start", state: :completed, number: "1") %>
      <% stepper.with_step(title: "Process", state: :active, number: "2") %>
      <% stepper.with_step(title: "Finish", state: :pending, number: "3") %>
    <% end %>
  </div>
</div>