<div class="space-y-8">
  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">With Data Attributes</h4>
    <%= fx_stepper(data: { controller: "stepper", stepper_current_value: "2" }) do |stepper| %>
      <% stepper.with_step(title: "Step 1", state: :completed, number: "1") %>
      <% stepper.with_step(title: "Step 2", state: :active, number: "2") %>
      <% stepper.with_step(title: "Step 3", state: :pending, number: "3") %>
    <% end %>
  </div>

  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">With ID and ARIA Labels</h4>
    <%= fx_stepper(id: "checkout-stepper", role: "progressbar", aria: { label: "Checkout Progress" }) do |stepper| %>
      <% stepper.with_step(title: "Cart", state: :completed, number: "1") %>
      <% stepper.with_step(title: "Shipping", state: :active, number: "2") %>
      <% stepper.with_step(title: "Payment", state: :pending, number: "3") %>
      <% stepper.with_step(title: "Confirmation", state: :pending, number: "4") %>
    <% end %>
  </div>

  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">With Custom Styling</h4>
    <%= fx_stepper(style: "border: 2px solid #e5e7eb; padding: 1rem; border-radius: 0.5rem;") do |stepper| %>
      <% stepper.with_step(title: "Design", state: :completed, number: "1") %>
      <% stepper.with_step(title: "Develop", state: :active, number: "2") %>
      <% stepper.with_step(title: "Test", state: :pending, number: "3") %>
      <% stepper.with_step(title: "Deploy", state: :pending, number: "4") %>
    <% end %>
  </div>
</div>