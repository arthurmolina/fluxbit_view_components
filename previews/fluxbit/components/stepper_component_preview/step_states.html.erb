<div class="space-y-8">
  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">All Pending</h4>
    <%= fx_stepper do |stepper| %>
      <% stepper.with_step(title: "Step 1", state: :pending, number: "1") %>
      <% stepper.with_step(title: "Step 2", state: :pending, number: "2") %>
      <% stepper.with_step(title: "Step 3", state: :pending, number: "3") %>
    <% end %>
  </div>

  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Mixed States</h4>
    <%= fx_stepper do |stepper| %>
      <% stepper.with_step(title: "Step 1", state: :completed, number: "1") %>
      <% stepper.with_step(title: "Step 2", state: :active, number: "2") %>
      <% stepper.with_step(title: "Step 3", state: :pending, number: "3") %>
    <% end %>
  </div>

  <div>
    <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">All Active</h4>
    <%= fx_stepper do |stepper| %>
      <% stepper.with_step(title: "Step 1", state: :active, number: "1") %>
      <% stepper.with_step(title: "Step 2", state: :active, number: "2") %>
      <% stepper.with_step(title: "Step 3", state: :active, number: "3") %>
    <% end %>
  </div>
</div>