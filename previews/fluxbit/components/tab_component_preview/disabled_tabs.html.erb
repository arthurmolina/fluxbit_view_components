<div class="space-y-8">
  <div>
    <%= fx_heading(size: 3) do %>Disabled Tabs Example<% end %>
    <p class="text-gray-600 mt-2 mb-4">Some tabs can be disabled to prevent user interaction.</p>
    
    <%= fx_tab(variant: :default, color: :blue) do |tabs| %>
      <%= tabs.with_tab title: "Active Tab", active: true do %>
        <div class="p-4">
          <%= fx_heading(size: 4) do %>Active Content<% end %>
          <p class="text-gray-600 mt-2">This tab is active and fully interactive.</p>
          <%= fx_button(color: :blue, class: "mt-4") do %>Interact<% end %>
        </div>
      <% end %>
      
      <%= tabs.with_tab title: "Normal Tab" do %>
        <div class="p-4">
          <p class="text-gray-600">This is a normal tab that can be clicked.</p>
        </div>
      <% end %>
      
      <%= tabs.with_tab title: "Disabled Tab", disabled: true do %>
        <div class="p-4">
          <p class="text-gray-600">This content should not be accessible.</p>
        </div>
      <% end %>
      
      <%= tabs.with_tab title: "Coming Soon", disabled: true do %>
        <div class="p-4">
          <p class="text-gray-600">Feature coming soon!</p>
        </div>
      <% end %>
    <% end %>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Pills with Disabled States<% end %>
    <p class="text-gray-600 mt-2 mb-4">Pills variant showing disabled states.</p>
    
    <%= fx_tab(variant: :pills, color: :green) do |tabs| %>
      <%= tabs.with_tab title: "Available", active: true do %>
        <div class="p-4">
          <%= fx_heading(size: 4) do %>Available Features<% end %>
          <div class="mt-4 space-y-2">
            <%= fx_badge(color: :success, with_content: "User Management") %>
            <%= fx_badge(color: :success, with_content: "Dashboard") %>
            <%= fx_badge(color: :success, with_content: "Reports") %>
          </div>
        </div>
      <% end %>
      
      <%= tabs.with_tab title: "Beta Features", disabled: true do %>
        <div class="p-4">
          <p class="text-gray-600">Beta features are not yet available.</p>
        </div>
      <% end %>
      
      <%= tabs.with_tab title: "Premium Only", disabled: true do %>
        <div class="p-4">
          <p class="text-gray-600">Upgrade to premium to access these features.</p>
        </div>
      <% end %>
    <% end %>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Underline with Mixed States<% end %>
    <p class="text-gray-600 mt-2 mb-4">Underline variant with both active and disabled tabs.</p>
    
    <%= fx_tab(variant: :underline, color: :purple) do |tabs| %>
      <%= tabs.with_tab title: "Settings", active: true, icon: anyicon("heroicons_solid:cog-6-tooth") do %>
        <div class="p-4">
          <%= fx_heading(size: 4) do %>General Settings<% end %>
          <div class="mt-4 space-y-4">
            <%= fx_text_field(:app_name, label: "Application Name", value: "My App") %>
            <%= fx_toggle(:notifications, label: "Enable Notifications", checked: true) %>
          </div>
        </div>
      <% end %>
      
      <%= tabs.with_tab title: "Integrations", icon: anyicon("heroicons_solid:puzzle-piece") do %>
        <div class="p-4">
          <p class="text-gray-600">Available integrations will be shown here.</p>
        </div>
      <% end %>
      
      <%= tabs.with_tab title: "Advanced", disabled: true, icon: anyicon("heroicons_solid:exclamation-triangle") do %>
        <div class="p-4">
          <p class="text-gray-600">Advanced settings require administrator privileges.</p>
        </div>
      <% end %>
      
      <%= tabs.with_tab title: "Enterprise", disabled: true, icon: anyicon("heroicons_solid:building-office") do %>
        <div class="p-4">
          <p class="text-gray-600">Enterprise features are not available in your current plan.</p>
        </div>
      <% end %>
    <% end %>
  </div>
  
  <div>
    <%= fx_heading(size: 3) do %>Vertical Tabs with Disabled States<% end %>
    <p class="text-gray-600 mt-2 mb-4">Vertical layout with disabled tabs.</p>
    
    <%= fx_tab(variant: :default, color: :red, vertical: true) do |tabs| %>
      <%= tabs.with_tab title: "Profile", active: true, icon: anyicon("heroicons_solid:user") do %>
        <div class="p-4">
          <%= fx_heading(size: 4) do %>Profile Information<% end %>
          <p class="text-gray-600 mt-2">Edit your basic profile information.</p>
        </div>
      <% end %>
      
      <%= tabs.with_tab title: "Security", icon: anyicon("heroicons_solid:shield-check") do %>
        <div class="p-4">
          <p class="text-gray-600">Security settings and two-factor authentication.</p>
        </div>
      <% end %>
      
      <%= tabs.with_tab title: "Billing", disabled: true, icon: anyicon("heroicons_solid:credit-card") do %>
        <div class="p-4">
          <p class="text-gray-600">Billing information is managed by your administrator.</p>
        </div>
      <% end %>
      
      <%= tabs.with_tab title: "API Access", disabled: true, icon: anyicon("heroicons_solid:key") do %>
        <div class="p-4">
          <p class="text-gray-600">API access requires developer plan.</p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>