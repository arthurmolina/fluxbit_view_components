<%= fx_tab(variant: :default, color: :emerald) do |tabs| %>
  <%= tabs.with_tab title: "Home", active: true, icon: anyicon("heroicons_solid:home") do %>
    <div class="p-6">
      <%= fx_heading(size: 2) do %>Welcome Home<% end %>
      <div class="mt-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <%= fx_card(class: "p-6") do %>
            <div class="flex items-center mb-4">
              <%= anyicon("heroicons_solid:chart-bar", class: "w-8 h-8 text-emerald-600") %>
              <h3 class="ml-3 text-lg font-semibold">Analytics</h3>
            </div>
            <p class="text-gray-600">Track your performance with detailed analytics and insights.</p>
            <%= fx_button(color: :emerald, size: :sm, class: "mt-4") do %>View Analytics<% end %>
          <% end %>
          
          <%= fx_card(class: "p-6") do %>
            <div class="flex items-center mb-4">
              <%= anyicon("heroicons_solid:users", class: "w-8 h-8 text-blue-600") %>
              <h3 class="ml-3 text-lg font-semibold">Team</h3>
            </div>
            <p class="text-gray-600">Manage your team members and their permissions.</p>
            <%= fx_button(color: :blue, size: :sm, class: "mt-4") do %>Manage Team<% end %>
          <% end %>
          
          <%= fx_card(class: "p-6") do %>
            <div class="flex items-center mb-4">
              <%= anyicon("heroicons_solid:cog-6-tooth", class: "w-8 h-8 text-gray-600") %>
              <h3 class="ml-3 text-lg font-semibold">Settings</h3>
            </div>
            <p class="text-gray-600">Configure your application settings and preferences.</p>
            <%= fx_button(color: :secondary, size: :sm, class: "mt-4") do %>Open Settings<% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  
  <%= tabs.with_tab title: "Projects", icon: anyicon("heroicons_solid:folder") do %>
    <div class="p-6">
      <%= fx_heading(size: 2) do %>My Projects<% end %>
      <div class="mt-6">
        <div class="flex justify-between items-center mb-6">
          <p class="text-gray-600">Manage your active projects and create new ones.</p>
          <%= fx_button(color: :emerald) do %>
            <%= anyicon("heroicons_solid:plus", class: "w-4 h-4 mr-2") %>
            New Project
          <% end %>
        </div>
        
        <div class="space-y-4">
          <% [
            {name: "E-commerce Platform", status: "Active", progress: 75, color: "emerald"},
            {name: "Mobile App", status: "In Review", progress: 90, color: "yellow"},
            {name: "Dashboard Redesign", status: "Planning", progress: 25, color: "blue"}
          ].each do |project| %>
            <div class="border rounded-lg p-4">
              <div class="flex items-center justify-between mb-3">
                <h4 class="font-semibold"><%= project[:name] %></h4>
                <%= fx_badge(color: project[:color].to_sym, with_content: project[:status]) %>
              </div>
              <div class="flex items-center space-x-4">
                <div class="flex-1">
                  <div class="flex items-center justify-between text-sm mb-1">
                    <span>Progress</span>
                    <span><%= project[:progress] %>%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-<%= project[:color] %>-500 h-2 rounded-full" style="width: <%= project[:progress] %>%"></div>
                  </div>
                </div>
                <%= fx_button(color: :secondary, size: :sm) do %>
                  <%= anyicon("heroicons_solid:arrow-right", class: "w-4 h-4") %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  
  <%= tabs.with_tab title: "Messages", icon: anyicon("heroicons_solid:chat-bubble-left-right") do %>
    <div class="p-6">
      <%= fx_heading(size: 2) do %>Messages<% end %>
      <div class="mt-6">
        <div class="space-y-4">
          <% [
            {sender: "Sarah Johnson", message: "Hey, can you review the latest designs?", time: "5 min ago", unread: true},
            {sender: "Mike Chen", message: "The API integration is ready for testing", time: "1 hour ago", unread: true},
            {sender: "Lisa Wong", message: "Thanks for the feedback on the proposal!", time: "3 hours ago", unread: false}
          ].each do |msg| %>
            <div class="flex items-start space-x-4 p-4 border rounded-lg <%= 'bg-emerald-50 border-emerald-200' if msg[:unread] %>">
              <%= fx_avatar(placeholder_initials: msg[:sender].split(' ').map(&:first).join) %>
              <div class="flex-1 min-w-0">
                <div class="flex items-center justify-between">
                  <h4 class="font-semibold text-sm"><%= msg[:sender] %></h4>
                  <span class="text-xs text-gray-500"><%= msg[:time] %></span>
                </div>
                <p class="text-gray-600 text-sm mt-1"><%= msg[:message] %></p>
              </div>
              <% if msg[:unread] %>
                <div class="w-2 h-2 bg-emerald-500 rounded-full"></div>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <div class="mt-6 text-center">
          <%= fx_button(color: :emerald, variant: :outline) do %>
            <%= anyicon("heroicons_solid:envelope", class: "w-4 h-4 mr-2") %>
            View All Messages
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  
  <%= tabs.with_tab title: "Calendar", icon: anyicon("heroicons_solid:calendar") do %>
    <div class="p-6">
      <%= fx_heading(size: 2) do %>Upcoming Events<% end %>
      <div class="mt-6">
        <div class="space-y-4">
          <% [
            {title: "Team Standup", time: "9:00 AM", date: "Today", type: "meeting"},
            {title: "Product Demo", time: "2:00 PM", date: "Today", type: "presentation"},
            {title: "Client Call", time: "10:30 AM", date: "Tomorrow", type: "call"},
            {title: "Sprint Planning", time: "1:00 PM", date: "Friday", type: "planning"}
          ].each do |event| %>
            <div class="flex items-center space-x-4 p-4 border rounded-lg hover:bg-gray-50">
              <div class="flex-shrink-0">
                <% icon_class = case event[:type]
                     when 'meeting' then 'heroicons_solid:users'
                     when 'presentation' then 'heroicons_solid:presentation-chart-line'
                     when 'call' then 'heroicons_solid:phone'
                     else 'heroicons_solid:calendar'
                   end %>
                <%= anyicon(icon_class, class: "w-6 h-6 text-emerald-600") %>
              </div>
              <div class="flex-1 min-w-0">
                <h4 class="font-semibold"><%= event[:title] %></h4>
                <p class="text-sm text-gray-600"><%= event[:date] %> at <%= event[:time] %></p>
              </div>
              <%= fx_button(color: :secondary, size: :sm) do %>Join<% end %>
            </div>
          <% end %>
        </div>
        
        <div class="mt-6 text-center">
          <%= fx_button(color: :emerald, variant: :outline) do %>
            <%= anyicon("heroicons_solid:calendar-days", class: "w-4 h-4 mr-2") %>
            View Full Calendar
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>