<div class="space-y-6">
  <div>
    <h4 class="text-sm font-medium text-gray-700 mb-2">Auto height (default)</h4>
    <%= fx_dropzone(
      name: "auto_height",
      title: "Auto Height",
      subtitle: "Default auto-sizing",
      height: 0
    ) %>
  </div>

  <div>
    <h4 class="text-sm font-medium text-gray-700 mb-2">Small (h-32)</h4>
    <%= fx_dropzone(
      name: "small_height",
      title: "Small Dropzone",
      subtitle: "Compact size",
      height: 1
    ) %>
  </div>

  <div>
    <h4 class="text-sm font-medium text-gray-700 mb-2">Medium (h-64)</h4>
    <%= fx_dropzone(
      name: "medium_height",
      title: "Medium Dropzone",
      subtitle: "Standard size",
      height: 2
    ) %>
  </div>

  <div>
    <h4 class="text-sm font-medium text-gray-700 mb-2">Large (h-96)</h4>
    <%= fx_dropzone(
      name: "large_height",
      title: "Large Dropzone",
      subtitle: "Spacious upload area",
      height: 3
    ) %>
  </div>
</div>