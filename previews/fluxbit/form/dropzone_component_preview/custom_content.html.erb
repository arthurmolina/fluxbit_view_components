<div class="space-y-6">
  <%= fx_dropzone(name: "custom_content_1", height: 2) do %>
    <div class="text-center">
      <svg class="mx-auto h-12 w-12 text-blue-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
        <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
      <h3 class="mt-2 text-lg font-medium text-gray-900">Custom Upload Interface</h3>
      <p class="mt-1 text-sm text-gray-500">Drag photos here or click to browse</p>
      <p class="mt-1 text-xs text-gray-400">PNG, JPG, GIF up to 10MB</p>
    </div>
  <% end %>

  <%= fx_dropzone(name: "custom_content_2", height: 3) do %>
    <div class="flex flex-col items-center justify-center h-full">
      <div class="rounded-full bg-gradient-to-r from-purple-400 to-pink-400 p-3 mb-4">
        <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
        </svg>
      </div>
      <h2 class="text-xl font-bold text-gray-900 mb-2">Drop Your Files Here</h2>
      <p class="text-gray-600 text-center max-w-sm">
        Upload your documents, images, or any other files. We accept all common file formats.
      </p>
      <button type="button" class="mt-4 bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg font-medium">
        Choose Files
      </button>
    </div>
  <% end %>
</div>