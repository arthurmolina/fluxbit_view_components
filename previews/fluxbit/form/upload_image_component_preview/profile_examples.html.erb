<div class="space-y-8">
  <div>
    <h4 class="font-semibold mb-4">Personal Profile</h4>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%= fx_upload_image(
        name: "personal_avatar",
        label: "Profile Picture",
        title: "Change Photo",
        image_path: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=160&h=160&fit=crop&crop=face",
        help_text: "Your profile photo will be visible to other users"
      ) %>

      <%= fx_upload_image(
        name: "personal_cover",
        label: "Cover Photo",
        title: "Update Cover",
        help_text: "Add a cover photo to personalize your profile"
      ) %>
    </div>
  </div>

  <div>
    <h4 class="font-semibold mb-4">Professional Profile</h4>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%= fx_upload_image(
        name: "professional_headshot",
        label: "Professional Headshot",
        title: "Upload Photo",
        image_placeholder: "https://via.placeholder.com/160x160/1F2937/FFFFFF?text=ðŸ‘”",
        help_text: "Upload a professional headshot for your business profile",
        helper_popover: "Use a clear, professional photo with good lighting. Dress appropriately for your industry and maintain eye contact with the camera."
      ) %>

      <%= fx_upload_image(
        name: "company_logo",
        label: "Company Logo",
        title: "Upload Logo",
        image_placeholder: "https://via.placeholder.com/160x160/3B82F6/FFFFFF?text=LOGO",
        accept: ".png,.svg,.jpg",
        help_text: "Upload your company or personal brand logo"
      ) %>
    </div>
  </div>

  <div>
    <h4 class="font-semibold mb-4">Team Member Profiles</h4>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%= fx_upload_image(
        name: "team_member_1",
        label: "Team Member",
        title: "Add Photo",
        image_path: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=160&h=160&fit=crop&crop=face",
        help_text: "John Doe - CEO"
      ) %>

      <%= fx_upload_image(
        name: "team_member_2",
        label: "Team Member",
        title: "Add Photo",
        image_path: "https://images.unsplash.com/photo-1494790108755-2616b612b786?w=160&h=160&fit=crop&crop=face",
        help_text: "Jane Smith - CTO"
      ) %>

      <%= fx_upload_image(
        name: "team_member_3",
        label: "Team Member",
        title: "Add Photo",
        image_placeholder: "https://via.placeholder.com/160x160/E5E7EB/9CA3AF?text=ðŸ‘¤",
        help_text: "Add new team member"
      ) %>
    </div>
  </div>

  <div>
    <h4 class="font-semibold mb-4">Social Media Profile</h4>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%= fx_upload_image(
        name: "social_avatar",
        label: "Profile Picture",
        title: "Update Avatar",
        image_path: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=160&h=160&fit=crop&crop=face",
        help_text: "This will be your public profile picture"
      ) %>

      <%= fx_upload_image(
        name: "social_banner",
        label: "Profile Banner",
        title: "Change Banner",
        help_text: "Upload a banner image for your profile header",
        helper_popover: "Banner images should be landscape orientation. Choose an image that represents your personality or brand."
      ) %>
    </div>
  </div>

  <div>
    <h4 class="font-semibold mb-4">Account Verification</h4>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%= fx_upload_image(
        name: "id_front",
        label: "ID Front",
        title: "Upload Front",
        accept: ".jpg,.jpeg,.png,.pdf",
        help_text: "Upload the front of your government ID",
        helper_popover: "Ensure the ID is clearly visible, all text is readable, and the photo matches your appearance. Accepted formats: JPG, PNG, PDF."
      ) %>

      <%= fx_upload_image(
        name: "id_back",
        label: "ID Back",
        title: "Upload Back",
        accept: ".jpg,.jpeg,.png,.pdf",
        help_text: "Upload the back of your government ID"
      ) %>
    </div>
  </div>
</div>