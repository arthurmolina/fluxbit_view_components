<div class="space-y-4">
  <%= fx_text_field(
    name: "password",
    label: "Password",
    type: :password,
    icon: "heroicons_solid:lock-closed",
    placeholder: "Enter your password"
  ) %>

  <%= fx_text_field(
    name: "confirm_password",
    label: "Confirm Password",
    type: :password,
    icon: "heroicons_solid:lock-closed",
    right_icon: "heroicons_solid:eye",
    placeholder: "Confirm your password"
  ) %>

  <%= fx_text_field(
    name: "current_password",
    label: "Current Password",
    type: :password,
    icon: "heroicons_solid:shield-check",
    placeholder: "Enter current password",
    help_text: "Required to change password"
  ) %>
</div>