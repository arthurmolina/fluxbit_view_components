<div class="space-y-6">
  <div>
    <h4 class="font-semibold mb-3">Price Range ($0 - $1000)</h4>
    <%= fx_range(
      name: "price",
      label: "Maximum Price",
      value: 250,
      min: 0,
      max: 1000,
      step: 50
    ) %>
  </div>

  <div>
    <h4 class="font-semibold mb-3">Rating (1 - 5 stars)</h4>
    <%= fx_range(
      name: "rating",
      label: "Minimum Rating",
      value: 3,
      min: 1,
      max: 5,
      step: 1
    ) %>
  </div>

  <div>
    <h4 class="font-semibold mb-3">Temperature (-20°C to 50°C)</h4>
    <%= fx_range(
      name: "temperature",
      label: "Target Temperature",
      value: 22,
      min: -20,
      max: 50,
      step: 1
    ) %>
  </div>

  <div>
    <h4 class="font-semibold mb-3">Precision Decimal (0.0 - 1.0)</h4>
    <%= fx_range(
      name: "precision",
      label: "Precision Value",
      value: 0.5,
      min: 0,
      max: 1,
      step: 0.1
    ) %>
  </div>
</div>