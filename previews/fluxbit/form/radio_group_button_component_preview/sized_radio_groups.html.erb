<div class="space-y-8">
  <div>
    <%= fx_heading(size: 4, class: "mb-4") do %>Extra Small (size: 0)<% end %>
    <%= fx_radio_group_button(name: "size_0", size: 0) do |radio| %>
      <%= radio.with_radio_option(value: "1", checked: true) do %>XS 1<% end %>
      <%= radio.with_radio_option(value: "2") do %>XS 2<% end %>
      <%= radio.with_radio_option(value: "3") do %>XS 3<% end %>
    <% end %>
  </div>

  <div>
    <%= fx_heading(size: 4, class: "mb-4") do %>Small (size: 1)<% end %>
    <%= fx_radio_group_button(name: "size_1", size: 1) do |radio| %>
