<div class="space-y-4">
  <%= fx_toggle(
    label: "Unchecked State",
    name: "unchecked",
    checked: false
  ) %>

  <%= fx_toggle(
    label: "Checked State",
    name: "checked",
    checked: true
  ) %>

  <%= fx_toggle(
    label: "Success Checked",
    name: "success_checked",
    checked: true,
    color: :success
  ) %>

  <%= fx_toggle(
    label: "Danger Checked",
    name: "danger_checked",
    checked: true,
    color: :danger
  ) %>
</div>