<div class="space-y-4">
  <%= fx_toggle(
    label: "Normal Label Position",
    name: "normal",
    invert_label: false
  ) %>

  <%= fx_toggle(
    label: "Inverted Label Position",
    name: "inverted",
    invert_label: true
  ) %>

  <%= fx_toggle(
    label: "Inverted with Help Text",
    name: "inverted_help",
    invert_label: true,
    help_text: "Toggle is on the left, label on the right"
  ) %>
</div>